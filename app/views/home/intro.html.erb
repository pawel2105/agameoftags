          <span class='example-tag'>
            #way2ill
          </span>
        <% end %>

        <%= link_to 'https://www.instagram.com/explore/tags/thecoolmagazine/', class: 'hero-tag-link' do %>
          <span class='example-tag'>
            #thecoolmagazine
          </span>
        <% end %>

