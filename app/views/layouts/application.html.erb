<!DOCTYPE html>
<html>
  <head>
    <title>A Game of Tags</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <%= render partial: 'shared/meta' %>
    <% if Rails.env.production? %>
      <%= render partial: 'shared/ga' %>
    <% end %>
  </head>

  <body>
    <div class="body-table-container">
      <%= render partial: 'shared/nav' %>
      <%= yield %>
      <div style="display: table-row;height: 1px;"></div>
      <%= render partial: 'shared/footer' %>
    </div>

    <script>
      WebFont.load({ google: { families: ['Lato:300,400', 'Open Sans'] } });
    </script>
  </body>
</html>
