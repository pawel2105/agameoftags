<div class='main-container'>
  <div class="tabs is-boxed">
    <ul>
      <li class="is-active">
        <a><i class="fa fa-image"></i> New search</a>
      </li>

      <li>
        <%= link_to searches_path do %>
          <i class="fa fa-music"></i> Previous searches
        <% end %>
      </li>

      <li>
        <a><i class="fa fa-film"></i> Help</a>
      </li>
    </ul>
  </div>

  <div class="search-container">
    <%= form_tag '/hashtag-query', method: :get do %>
      <div class="columns">
        <div class="column search-field-wrapper">
          <%= text_field_tag 'hashtag_one', '', class: 'tag-search-input' %>
        </div>

        <div class="column search-field-wrapper">
          <%= text_field_tag 'hashtag_two', '', class: 'tag-search-input' %>
        </div>

        <div class="column search-field-wrapper">
          <%= text_field_tag 'hashtag_three', '', class: 'tag-search-input' %>
        </div>
      </div>

      <div class="columns">
        <div class="column ctr-txt">
          <%= submit_tag 'SEARCH', class: 'hero-cta' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  .main-container {
    margin: 80px auto 0;
    width: 80%;
  }

  .search-container {
    margin-top: -20px!important;
    margin-bottom: 50px;
    background-color: white;
    min-height: 500px;
    border-left: 1px solid #d3d6db;
    border-right: 1px solid #d3d6db;
    border-bottom: 1px solid #d3d6db;
  }

  .search-field-wrapper {
    padding: 2em;
    text-align: center;
  }

  .ctr-txt {
    text-align: center;
  }

  .tag-search-input {
    width: 90%;
    padding: 0.35em;
  }
</style>